@model Diplom_Autentif.Models.Operation

@{
    ViewBag.Title = "Delete";
}

<h2>Удалить</h2>

<h3>Уверены что хотите удалить эту операцию?</h3>
<div>
    <h4>Операции</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>Тип</dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>Сумма</dt>
        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>Терминал</dt>
        <dd>
            @Html.DisplayFor(model => model.Terminal)
        </dd>

        <dt>Источник</dt>
        <dd>
            @Html.DisplayFor(model => model.Account_from)
        </dd>

        <dt>Приемник</dt>
        <dd>
            @Html.DisplayFor(model => model.Account_to)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку операций", "Index")
        </div>
    }
</div>

<style>
    .yourCustomClass {
        min-height: 20%;
        min-width: 80%;
    }

    .selectBox {
        height: 20%;
        width: 80%;
    }
</style>



