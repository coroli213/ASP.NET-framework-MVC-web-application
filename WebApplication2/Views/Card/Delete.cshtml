@model Diplom_Autentif.Models.Card

@{
    ViewBag.Title = "Delete";
}

<h2>Удалить</h2>

<h3>Уверены что хотите удалить эту карту?</h3>
<div>
    <h4>Клиенты</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>Номер карты</dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt>Pin код</dt>
        <dd>
            @Html.DisplayFor(model => model.Pin)
        </dd>
        <dt>Csv</dt>
        <dd>
            @Html.DisplayFor(model => model.Csv)
        </dd>
        <dt>Срок службы</dt>
        <dd>
            @Html.DisplayFor(model => model.Date_of)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку карт", "Index")
        </div>
    }
</div>

<style>
    .yourCustomClass {
        min-height: 20%;
        min-width: 80%;
    }

    .selectBox {
        height: 20%;
        width: 80%;
    }
</style>



