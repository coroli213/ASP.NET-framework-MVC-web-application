@model Diplom_Autentif.Models.Terminal

@{
    ViewBag.Title = "Delete";
}

<h2>Удалить</h2>

<h3>Уверены что хотите удалить этот терминал?</h3>
<div>
    <h4>Терминалы</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Ади</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>Баланс</dt>
        <dd>
            @Html.DisplayFor(model => model.Balance)
        </dd>

        <dt>Филиал</dt>
        <dd>
            @Html.DisplayFor(model => model.Filial_owner)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку терминалов", "Index")
        </div>
    }
</div>

<style>
    .yourCustomClass {
        min-height: 20%;
        min-width: 80%;
    }

    .selectBox {
        height: 20%;
        width: 80%;
    }
</style>



