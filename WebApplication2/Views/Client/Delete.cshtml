@model Diplom_Autentif.Models.Client

@{
    ViewBag.Title = "Delete";
}

<h2>Удалить</h2>

<h3>Уверены что хотите удалить этого клиента?</h3>
<div>
    <h4>Клиенты</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayNameFor(model => model.First_name)
        </dd>
        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.Second_name)
        </dd>
        <dt>Отчество</dt>
        <dd>
            @Html.DisplayNameFor(model => model.Third_name)
        </dd>
        <dt>Серия</dt>
        <dd>
            @Html.DisplayFor(model => model.Serial)
        </dd>
        <dt>Номер</dt>
        <dd>
            @Html.DisplayNameFor(model => model.Numb)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку клиентов", "Index")
        </div>
    }
</div>

<style>
    .yourCustomClass {
        min-height: 20%;
        min-width: 80%;
    }

    .selectBox {
        height: 20%;
        width: 80%;
    }
</style>



